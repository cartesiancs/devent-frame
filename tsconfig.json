{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "react": [ "./node_modules/@types/react" ]
        }
    },
    "include": [
        "./server/**/*"
    ],
    "exclude": ["node_modules"]

}